<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".CanaryMainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnToggleWifi"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_network_wifi_black_48dp"
            android:onClick="toggleWifi"
            android:text="@string/label_btnToggleWiFi"
            />

        <Button
            android:id="@+id/btnToggleMobileData"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_network_cell_black_48dp"
            android:onClick="toggleMobileData"
            android:text="@string/label_btnToggleMobileData"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHelloWorld"
        android:gravity="center"
        android:text="Hello World!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</LinearLayout>
